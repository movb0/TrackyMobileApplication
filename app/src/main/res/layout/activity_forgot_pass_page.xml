<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/screenimageapp"
    tools:context=".ForgotPassPage">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="218dp"
        android:layout_height="85dp"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/logo1" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="30dp">
        <LinearLayout
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_text"
            android:orientation="vertical"
            android:padding="24dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/forgot"></ImageView>
            <TextView
                android:layout_width="243dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:text="  Forgot Password"
                android:textAlignment="center"
                android:textSize="23dp"
                android:textStyle="bold"></TextView>
            <EditText
                android:id="@+id/forgot_password1"
                android:layout_width="219dp"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/edit_text2"
                android:drawablePadding="8dp"
                android:hint="Your Email"
                android:padding="8dp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:backgroundTint="@color/black"
                android:text="Request reset link"
                android:textColor="@color/white"
                android:textSize="13dp"
                app:cornerRadius="40dp" />
            <Button
                android:id="@+id/Button3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:backgroundTint="@color/black"
                android:text="Login"
                android:textColor="@color/white"
                android:textSize="13dp"
                app:cornerRadius="40dp" /></LinearLayout>




    </androidx.cardview.widget.CardView>

</LinearLayout>
