<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screenimageapp"
    android:gravity="center"
    android:orientation="vertical"

    tools:context=".LoginPage">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="218dp"
        android:layout_height="85dp"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/logo1" />

    <EditText

        android:id="@+id/login_Email"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="125dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/edit_text"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/baseline_person_24"
        android:drawablePadding="8dp"
        android:hint="Email"
        android:padding="8dp" />
    <EditText
        android:id="@+id/login_Password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/edit_text"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/baseline_password_24"
        android:drawablePadding="8dp"
        android:hint="Password"
        android:padding="8dp" />
    <EditText
        android:id="@+id/signup_ConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/edit_text"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:drawablePadding="8dp"
        android:hint="Confirm Password"
        android:padding="8dp" />
    <TextView
        android:id="@+id/forgot_password1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="18dp"
        android:text="Forgot Password?"
        android:textAlignment="textEnd"
        android:textColor="@color/blue1"></TextView>
 <ProgressBar
     android:id="@+id/probar"
     android:visibility="gone"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"></ProgressBar>
    <Button
        android:id="@+id/Login_Button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:backgroundTint="@color/black"
        android:text="Log In"
        android:textColor="@color/green1"
        android:textSize="18dp"
        app:cornerRadius="40dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="or"
        android:textSize="20dp"></TextView>
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="56dp"
        android:layout_height="55dp"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.113" />
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="56dp"
        android:layout_height="55dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="-55dp"
        android:layout_marginRight="18dp" />
    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="56dp"
        android:layout_height="55dp"
        android:layout_marginLeft="-30dp"
        android:layout_marginTop="-58dp"
        android:layout_marginRight="26dp" />
    <TextView
        android:id="@+id/navlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_marginTop="7dp"
        android:text="Don't have an account? Sign Up"></TextView>
</LinearLayout>