<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/screenimageapp"
    tools:context=".ForgotPassPage">

    <ImageButton
        android:id="@+id/ImageButton1"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_marginLeft="-180dp"
        android:layout_marginTop="-60dp"
        android:background="@drawable/baseline_arrow_back_ios_new_24"></ImageButton>
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="218dp"
        android:layout_height="85dp"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/logo1" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="30dp">
        <LinearLayout
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_text"
            android:orientation="vertical"
            android:padding="24dp">
            <TextView
                android:layout_width="243dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:text="Choose your Role"
                android:textAlignment="center"
                android:textSize="23dp"
                android:textStyle="bold"></TextView>
            <ImageButton
                android:id="@+id/passButton"
                android:layout_width="221dp"
                android:layout_height="123dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/passenger">
            </ImageButton>
            <TextView
                android:layout_width="243dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:text="Passenger"
                android:textAlignment="center"
                android:textSize="23dp"
                android:textStyle="bold"></TextView>
            <ImageButton
                android:id="@+id/driverButton"
                android:layout_width="wrap_content"
                android:layout_height="136dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/driver2"></ImageButton>
            <TextView
                android:layout_width="243dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:text="Driver"
                android:textAlignment="center"
                android:textSize="23dp"
                android:textStyle="bold"></TextView></LinearLayout>
    </androidx.cardview.widget.CardView></LinearLayout>
